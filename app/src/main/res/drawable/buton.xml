<?xml version="1.0" encoding="utf-8"?>  <!--belgenin XML sürümünü ve karakter kodlamasını belirtir -->
<!--selector öğesi, belirli durumlara (örneğin, basıldığında veya odaklandığında) karşılık
 gelen farklı drawable öğelerini içerebilen bir konteynerdir -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray"/> <!-- Pasif buton rengi -->
            <corners android:radius="50dp"/> <!-- Köşeleri yuvarlat -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/firebrick"/> <!-- Aktif buton rengi -->
            <corners android:radius="50dp"/> <!-- Köşeleri yuvarlat -->
        </shape>
    </item>
</selector>
