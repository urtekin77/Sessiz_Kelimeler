<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/uniteBackground"
    android:layout_width="match_parent"
    android:layout_height="674dp"
    android:background="@color/lightseagreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/lightseagreen">
        <TextView
            android:id="@+id/uniteAD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ünite ADI"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/darkred"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            android:textSize="19sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/darkred"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/uniteIcerik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ünite içeriği "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="5dp"
            android:textSize="16sp"
            android:layout_marginStart="15dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/note"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:src="@drawable/note"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:scaleType="fitXY"
            android:id="@+id/background"
            android:src="@drawable/sign_language"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button1"
                    style="@android:style/Widget.Button"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="125dp"
                    android:background="@drawable/adim_buton"
                    android:text="1"
                    android:textColor="@color/linen"
                    android:textSize="20dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button2"
                    style="@android:style/Widget.Button"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginStart="190dp"
                    android:background="@drawable/adim_buton"
                    android:text="2"
                    android:textColor="@color/linen"
                    android:textSize="20dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button3"
                    style="@android:style/Widget.Button"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="260dp"
                    android:background="@drawable/adim_buton"
                    android:text="3"
                    android:textColor="@color/linen"
                    android:textSize="20dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button4"
                    style="@android:style/Widget.Button"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="160dp"
                    android:layout_marginStart="180dp"
                    android:background="@drawable/adim_buton"
                    android:text="4"
                    android:textColor="@color/linen"
                    android:textSize="20dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button5"
                    style="@android:style/Widget.Button"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="235dp"
                    android:layout_marginStart="100dp"
                    android:background="@drawable/adim_buton"
                    android:text="5"
                    android:textColor="@color/linen"
                    android:textSize="20dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button6"
                    style="@android:style/Widget.Button"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="300dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/adim_buton"
                    android:text="6"
                    android:textColor="@color/linen"
                    android:textSize="20dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button7"
                    style="@android:style/Widget.Button"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="360dp"
                    android:layout_marginStart="130dp"
                    android:background="@drawable/adim_buton"
                    android:text="7"
                    android:textColor="@color/linen"
                    android:textSize="20dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button8"
                    style="@android:style/Widget.Button"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="400dp"
                    android:layout_marginStart="260dp"
                    android:background="@drawable/adim_buton"
                    android:text="8"
                    android:textColor="@color/linen"
                    android:textSize="20dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button9"
                    style="@android:style/Widget.Button"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="470dp"
                    android:layout_marginStart="180dp"
                    android:background="@drawable/adim_buton"
                    android:text="9"
                    android:textColor="@color/linen"
                    android:textSize="20dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tekrar"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonTekrar"
                    style="@android:style/Widget.Button"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/buton"
                    android:text="Başla"
                    android:layout_marginStart="100dp"
                    android:textColor="@color/linen"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
