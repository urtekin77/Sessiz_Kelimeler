<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MenuFragment.ProfilFragment"
    android:background="@color/lightgray">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-41dp"
        tools:layout_editor_absoluteY="-52dp"

        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/darkred"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/kullaniciAdi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginStart="15dp"
                    android:text="Kullanıcı Adı"
                    android:textColor="@color/linen"
                    android:textSize="25dp"
                    />
                <TextView
                    android:id="@+id/kullaniciMail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:text="Kullanıcı mail"
                    android:textColor="@color/linen"
                    android:textSize="15sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/edittext_red">
                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/puan"
                        android:layout_gravity="center"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/puanDurumu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="25sp"
                            android:textColor="@color/linen"/>
                        <TextView
                            android:id="@+id/puanMetni"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Puan"
                            android:textColor="@color/linen"
                            android:textSize="12sp"
                            android:padding="5dp"/>


                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/edittext_red">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/ligPuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="450"
                            android:textSize="20sp"
                            android:textColor="@color/linen"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/ligADi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Altın Ligi"
                            android:textSize="20sp"
                            android:textColor="@color/linen"/>

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:background="@drawable/edittext_red">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_marginStart="9dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/_red" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/madalya1"
                        android:text="0"
                        android:textSize="35sp"
                        android:textColor="@color/linen"
                        android:gravity="center"/>

                </LinearLayout>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/linen"
                    android:layout_margin="5dp"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_marginStart="9dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/two_red" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:id="@+id/madalya2"
                        android:textSize="35sp"
                        android:textColor="@color/linen"
                        android:gravity="center"/>

                </LinearLayout>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/linen"
                    android:layout_margin="5dp"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_marginStart="9dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/three_red" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:id="@+id/madalya3"
                        android:textSize="35sp"
                        android:textColor="@color/linen"
                        android:gravity="center"/>

                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:onClick="expand"
                >
                <LinearLayout
                    android:id="@+id/editLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/darkred"
                    >
                    <TextView
                        android:id="@+id/editProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:gravity="center"
                        android:drawableEnd="@drawable/arrow_down_24"
                        android:text="Profilini Düzenle"
                        android:textColor="@color/linen"
                        android:textSize="17sp"
                        android:background="@drawable/edittext_red"/>


                    <LinearLayout
                        android:id="@+id/detayEdit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Yeni kullanıcı ismini giriniz :"
                            android:textSize="15sp"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/linen"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/edit_username"
                                android:textColor="@color/linen"
                                android:textSize="16sp"
                                android:layout_marginStart="20dp"
                                android:layout_marginBottom="30dp"
                                android:maxLines="1"
                                android:backgroundTint="@color/black"
                                />


                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="70dp"
                                android:layout_height="35dp"
                                android:id="@+id/btnUpdateUN"
                                android:background="@drawable/round_buton"
                                android:text="Güncelle"
                                android:layout_marginStart="20dp"
                                android:textColor="@color/linen"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="20dp"
                                />
                        </LinearLayout>




                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Yeni şifrenizi giriniz :"
                            android:textSize="15sp"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/linen"/>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <EditText
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/edit_password"
                                    android:textColor="@color/linen"
                                    android:textSize="16sp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginBottom="30dp"
                                    android:inputType="textPassword"
                                    android:maxLines="1"
                                    android:backgroundTint="@color/black"
                                    />
                                <TextView
                                    android:id="@+id/error"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/linen"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:gravity="center" />

                            </LinearLayout>


                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="70dp"
                                android:layout_height="35dp"
                                android:id="@+id/btnUpdate2"
                                android:background="@drawable/round_buton"
                                android:text="Güncelle"
                                android:layout_marginStart="20dp"
                                android:textColor="@color/linen"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="20dp"
                                />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/sendUsaMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:onClick="expand2">
                <LinearLayout
                    android:id="@+id/massageCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/darkred"
                    >
                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:drawableEnd="@drawable/arrow_down_24"
                        android:gravity="center"
                        android:text="Bize mesaj gönder"
                        android:textColor="@color/linen"
                        android:textSize="17sp"
                        />

                    <LinearLayout
                        android:id="@+id/MessageLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/editSendMessage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:hint="Önerilerinizi ve yorumlarınızı bekliyorum."
                            android:inputType="textMultiLine"
                            android:maxLines="6"
                            android:padding="5dp"
                            android:textColorHint="@color/linen" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sendMessageBtn"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/buton"
                            android:text="Gönder"
                            android:textColor="@color/linen"
                            android:textSize="17sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/uygulamaHakkinda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:onClick="expand1">
                <LinearLayout
                    android:id="@+id/uygulama"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/darkred"
                    >
                    <TextView
                        android:id="@+id/uygulamaText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:drawableEnd="@drawable/arrow_down_24"
                        android:gravity="center"
                        android:text="Uygulama hakkında"
                        android:textColor="@color/linen"
                        android:textSize="17sp"
                        />

                    <LinearLayout
                        android:id="@+id/HakkindaLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/uygulamaHakkindaText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:gravity="left"
                            android:text="@string/uygulama_hakkinda"
                            android:textColor="@color/linen"
                            android:textSize="18sp"
                            />


                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:onClick="expand4">
                <LinearLayout
                    android:id="@+id/deleteCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/darkred"
                    >

                    <TextView
                        android:id="@+id/text15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hesabı Sil"
                        android:gravity="center"
                        android:padding="10dp"
                        android:drawableEnd="@drawable/arrow_down_24"
                        android:textColor="@color/linen"
                        android:textSize="17sp"
                        android:background="@drawable/edittext_red"/>

                    <LinearLayout
                        android:id="@+id/deleteLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:text="Hesabınızı silmek istediğinizden emin misiniz?"
                            android:textColor="@color/linen"
                            android:textSize="17sp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">



                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/give_up"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="5dp"
                                android:padding="2dp"
                                android:background="@drawable/round_buton"
                                android:text="Hesabı sil"
                                android:textColor="@color/linen" />

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/darkred"
                android:layout_marginBottom="100dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                >

                <TextView
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableRight="@drawable/logout_24"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Çıkış Yap"
                    android:textColor="@color/linen"
                    android:textSize="17sp" />
            </androidx.cardview.widget.CardView>





        </androidx.appcompat.widget.LinearLayoutCompat>


    </ScrollView>


</FrameLayout>